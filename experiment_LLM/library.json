  "cognition": [
    {
      "id": "cog.pvt.v1",
      "name": "Psychomotor Vigilance Task (PVT)",
      "description": "Simple reaction time task sensitive to sleep loss and alertness.",
      "approx_burden_minutes": 5,
      "recommended_times_of_day": [
        "morning",
        "midday"
      ],
      "cooldown_minutes": 60,
      "metrics": [
        {
          "id": "rt_ms_mean",
          "type": "number",
          "description": "Mean reaction time (ms)"
        },
        {
          "id": "rt_ms_median",
          "type": "number",
          "description": "Median reaction time (ms)"
        },
        {
          "id": "lapses_count",
          "type": "number",
          "description": "Count of RT > 500 ms"
        },
        {
          "id": "false_starts_count",
          "type": "number",
          "description": "Premature responses"
        }
      ]
    },
    {
      "id": "cog.stroop.v1",
      "name": "Stroop Task",
      "description": "Measures interference control; outputs RT and accuracy by congruency and composite indices.",
      "approx_burden_minutes": 6,
      "recommended_times_of_day": [
        "morning",
        "evening"
      ],
      "cooldown_minutes": 60,
      "metrics": [
        {
          "id": "acc_congruent",
          "type": "number",
          "description": "Accuracy, congruent (%)"
        },
        {
          "id": "acc_incongruent",
          "type": "number",
          "description": "Accuracy, incongruent (%)"
        },
        {
          "id": "rt_congruent_ms",
          "type": "number",
          "description": "Mean RT, congruent (ms)"
        },
        {
          "id": "rt_incongruent_ms",
          "type": "number",
          "description": "Mean RT, incongruent (ms)"
        },
        {
          "id": "interference_ms",
          "type": "number",
          "description": "RT_incongruent - RT_congruent (ms)"
        },
        {
          "id": "ies",
          "type": "number",
          "description": "Inverse Efficiency Score: mean RT / (1 - error rate)"
        }
      ]
    }
  ],
